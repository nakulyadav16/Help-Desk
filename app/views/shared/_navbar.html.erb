<nav class="navbar navbar-expand-lg navbar-light fixed-top " style= "background: #31255e; color:white;">
  <span class="navbar-brand" style="color: white;">Help Desk</span> 
  <%= link_to "Home",  home_path, class:"navbar-brand", style:"color: white;" %>
  <%= link_to "Tickets", tickets_path, class:"navbar-brand", style:"color: white;"%>
  <% if current_user.present? %>
    <% if current_user.has_role? :admin %>
    <%= link_to "Departments",  departments_path, class:"navbar-brand", style:"color: white;"%>
    <%= link_to "Roles",  roles_path, class:"navbar-brand", style:"color: white;"%>
    <% end %>
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="width:200px;padding:0px;margin:auto; background: #31255e;color: white;border:none ">
            <h4 class="navbar-brand" style="display:inline-block; color: white;"><%= current_user.name %> </h4>
