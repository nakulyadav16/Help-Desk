<nav class="navbar navbar-expand-lg navbar-light fixed-top " style= "background: #FFBF69;">
  <span class="navbar-brand">Help Desk</span> 
  <%= link_to "Home",  home_path, class:"navbar-brand" %>
  <%= link_to "Tickets", tickets_path, class:"navbar-brand" %>
  <% if current_user.present? %>
    <% if current_user.has_role? :admin %>
    <%= link_to "Departments",  departments_path, class:"navbar-brand" %>
    <%= link_to "Roles",  roles_path, class:"navbar-brand" %>
    <% end %>
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="width:200px;padding:0px;margin:auto; background: #FFBF69;color: black;border:none ">
            <h4 class="navbar-brand" style="display:inline-block;"><%= current_user.name %> </h4>
            <% if current_user.profile_pic.attached? %>
              <%= image_tag current_user.profile_pic,  size: "30x30", style: "border-radius: 10px;" %>
            <% else %>
              <%= image_tag("no_profile_pic.jpg",  size: "30x30", style: "border-radius: 10px;")%>
            <% end %>
          </button>
          <ul class="dropdown-menu">
            <li><%= link_to 'Edit Profile',  edit_user_registration_path,  class:"dropdown-item" %></li>
            <li><%= link_to 'Log Out',  destroy_user_session_path,  method: :delete, class:"dropdown-item" %></li>
          </ul>
        </div>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Sign In',  new_user_session_path,  class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Register',  new_user_registration_path,  class: 'nav-link' %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
