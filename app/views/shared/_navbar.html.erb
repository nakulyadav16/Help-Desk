            <li><%= link_to 'Log Out',  destroy_user_session_path,  method: :delete, class:"dropdown-item", style:"color:white;" %></li>
          </ul>
        </div>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Sign In',  new_user_session_path,  class: 'nav-link text-light' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Register',  new_user_registration_path,  class: 'nav-link text-light' %>
