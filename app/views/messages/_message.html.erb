<% ticket.messages.each do | message |%>
	<div class="message  <%= 'me' if message.user_id == current_user.id %>">
		<div class="content-box">
			<div class="content">
				<%= render 'tickets/documents_attached', { model_instance: message }%>
				<%# <br> %>
				<%= message.content %> 
			</div>
			<div class="author">
				<%= message.user.name %>
			</div>
		</div>
	</div>
	<br>
<% end %>
