<div class="card login-box">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <br>
      <%= f.email_field :email, autofocus: true, placeholder:"email addrerss", class:"form-control", autocomplete: "email" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class:"form-control btn-info" %>
    </div>
  <% end %>
  <br>
  <div>
    <%= render "devise/shared/links" %>
  </div>
</div>
